<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- name space는 UserRepo의 fully qualified name으로 설정한다. -->
<mapper namespace="mpww.hw.board.model.dao.BoardDao">
    <insert id="insert" parameterType="Board">
        INSERT INTO mydb.board(User_id, title, content,regist_date)
        VALUES (#{User_id},#{title},#{content},#{regist_date});
    </insert>

    <select id="selectAll">
        SELECT * FROM mydb.board;
    </select>

    <select id="searchBoard" parameterType="SearchCondition">
    SELECT * FROM mydb.board
    WHERE <trim prefixOverrides="AND">
            <if test = "title != null;">
                AND title LIKE concat('%', #{title}, '%')
            </if>
            <if test = "content != null">
                AND content LIKE concat('%', #{content}, '%')
            </if>
    </trim>

    <if test = "order != null">
        ORDER BY ${order} ${direction}
    </if>
    </select>

    

</mapper>